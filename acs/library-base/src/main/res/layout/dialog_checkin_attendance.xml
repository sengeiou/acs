<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="800dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_dialog_blue2_radius5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="刷卡成功"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="6.0"
                android:scaleType="centerCrop"
                android:src="@drawable/picbg" />

            <TextureView
                android:id="@+id/textureview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4.0"
                />

            <ImageView
                android:id="@+id/nocamera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4.0"
                android:scaleType="centerCrop"
                android:src="@drawable/defpic"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_translucent_radius80"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="姓名："
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_shape_translucent_radius80"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="打卡时间"
                android:textColor="#ffffff"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/card_number"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_translucent_radius80"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="上课地点"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/starus"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_shape_translucent_radius80"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="考勤状态："
                android:textColor="#ffffff"
                android:textSize="16sp" />


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
